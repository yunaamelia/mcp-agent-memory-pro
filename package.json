{
  "name": "mcp-agent-memory-pro",
  "version": "0.0.1",
  "type": "module",
  "description": "Phase 0: Technical Foundation & Validation",
  "scripts": {
    "prepare": "lefthook install",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "validate": "./poc/validate-all.sh",
    "validate:quick": "./scripts/check-env.sh",
    "poc:mcp": "tsx poc/01-mcp-hello.ts",
    "poc:sqlite": "tsx poc/02-sqlite-test.ts",
    "poc:lance": "tsx poc/03-lancedb-test.ts",
    "poc:embedding": "cd poc && source venv/bin/activate && python 04-embedding-test.py",
    "poc:bridge": "tsx poc/05-python-bridge-test.ts",
    "poc:all": "npm run poc:sqlite && npm run poc:lance && npm run poc:bridge",
    "clean": "./scripts/cleanup.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@lancedb/lancedb": "^0.13.0",
    "better-sqlite3": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "lefthook": "^1.6.0",
    "markdownlint-cli": "^0.43.0",
    "prettier": "^3.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}