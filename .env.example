# ============================================================================
# MCP Agent Memory Pro - Configuration
# ============================================================================

# Data Directory
MCP_MEMORY_DATA_DIR=./data

# ============================================================================
# Phase 1: Embedding Service
# ============================================================================

EMBEDDING_SERVICE_URL=http://127.0.0.1:5001
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# ============================================================================
# Phase 2: Background Workers
# ============================================================================

# Enable/disable workers
WORKERS_ENABLED=true

# Claude API (for summarization)
CLAUDE_API_KEY=your-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=1024

# Memory Tiers (days)
SHORT_TERM_DAYS=2
WORKING_TERM_DAYS=30

# Importance Scoring
IMPORTANCE_SCORE_THRESHOLD=0.7
MIN_ACCESS_COUNT_FOR_PROMOTION=2

# Entity Extraction
NER_MODEL=en_core_web_sm
ENTITY_CONFIDENCE_THRESHOLD=0.5

# Summarization
SUMMARIZATION_BATCH_SIZE=10
MAX_SUMMARY_LENGTH=500

# Job Scheduling (cron expressions)
SCHEDULE_IMPORTANCE_SCORER=*/5 * * * *    # Every 5 minutes
SCHEDULE_ENTITY_EXTRACTOR=*/15 * * * *    # Every 15 minutes
SCHEDULE_MEMORY_PROMOTER=0 * * * *        # Hourly
SCHEDULE_SUMMARIZER=0 2 * * *             # Daily at 2 AM
SCHEDULE_GRAPH_BUILDER=0 3 * * *          # Daily at 3 AM

# Performance
MAX_WORKERS=4
WORKER_BATCH_SIZE=50

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=info
LOG_FILE=./data/mcp-memory.log

# ============================================================================
# Server
# ============================================================================

MCP_SERVER_NAME=mcp-agent-memory-pro
MCP_SERVER_VERSION=2.0.0

# Performance
VECTOR_SEARCH_LIMIT=100
CACHE_ENABLED=true
